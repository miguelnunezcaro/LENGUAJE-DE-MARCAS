<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="relacion">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="persona" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nombre" type="xs:string"></xs:element>
                            <xs:element name="email" maxOccurs="2" minOccurs="1">
                                <xs:simpleType>
                                 <xs:restriction base="xs:string">
                                     <xs:maxLength value="250"></xs:maxLength>
                                 </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="parentesco" minOccurs="0" maxOccurs="unbounded" >
                                <xs:complexType>
                                    <xs:attribute name="tipo">
                                        <xs:simpleType >
                                            <xs:restriction base="xs:string">
                                                <xs:enumeration value="Padre"></xs:enumeration>
                                                <xs:enumeration value="Madre"></xs:enumeration>
                                                <xs:enumeration value="Hijo"></xs:enumeration>
                                                <xs:enumeration value="Hija"></xs:enumeration>
                                                <xs:enumeration value="Otro"></xs:enumeration>
                                            </xs:restriction>
                                        </xs:simpleType>
                                    </xs:attribute>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="sexo" type="xs:string"></xs:attribute>
                        <xs:attribute name="carnet" use="optional">
                            <xs:simpleType>
                                <xs:restriction base="xs:string">
                                    <xs:pattern value="[A-Z][0-9][0-9][0-9][0-9]"></xs:pattern>
                                </xs:restriction>
                            </xs:simpleType>
                        </xs:attribute>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>